# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/mixedtrip
MONGODB_URI_TEST=mongodb://localhost:27017/mixedtrip_test

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# API Keys
ORCHESTRA_API_KEY=your_orchestra_api_key
ORCHESTRA_API_URL=https://api.orchestra.eu/v1

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=100        # Maximum number of requests per window

# Email Service (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn 